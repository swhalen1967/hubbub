<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>jdbc.protocol</param-name>
        <param-value>jdbc:derby</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.host</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.port</param-name>
        <param-value>1527</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.dbname</param-name>
        <param-value>hubbubnew</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.user</param-name>
        <param-value>javauser</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.pass</param-name>
        <param-value>javauser</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>edu.acc.j2ee.hubbub.webapp.HubbubContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>HubbubController</servlet-name>
        <servlet-class>edu.acc.j2ee.hubbub.controllers.HubbubController</servlet-class>
        <init-param>
            <param-name>view.path</param-name>
            <param-value>/WEB-INF/views</param-value>
        </init-param>
        <init-param>
            <param-name>posts.perpage</param-name>
            <param-value>10</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HubbubController</servlet-name>
        <url-pattern>/go</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <display-name>All Pages</display-name>
            <url-pattern>*.jsp</url-pattern>
            <url-pattern>*.jspf</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>true</scripting-invalid>
            <include-prelude>/WEB-INF/views/prelude.jspf</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
